%html
  %head
    %script(src="https://use.fontawesome.com/828dbcdbca.js")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="apple-mobile-web-app-capable" content="yes")
    :css
      @import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700|Ceviche+One');

      html {
        height: 100%;
      }
      body {
        height: 100%;
        margin: 0;
        padding: 0;
        background-color: #F8DF5C;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
      .main {
        width: 500px;
        margin: 0 auto;
      }
      .welcome {
        font-family: 'Ceviche One', cursive;
        font-size: 64px;
        line-height: 0.7em;
        text-align: center;
        display: block;
        margin: 5px auto;
      }
      .button {
        display: inline-block;
        margin-top: 15px;
        cursor: pointer;
      }
      .base, .button-wrapper {
        display: block;
        text-align: center;
        margin: 0 auto;
      }
      .hangmanBuild {
        margin: 15px auto 0 auto;
        display: block;
      }
      .hangmanDude {
        height: 304px;
        position: absolute;
      }
      .hangmanHead {
        position: absolute;
        margin: 58px auto 0 179px;
        display: none;
      }
      .hangmanBody {
        position: absolute;
        margin: 110px auto 0 179px;
        display: none;
      }
      .hangmanLeftArm {
        position: absolute;
        margin: 110px auto 0 240px;
        display: none;
      }
      .hangmanRightArm {
        position: absolute;
        margin: 110px auto 0 142px;
        display: none;
      }
      .hangmanLeftLeg {
        position: absolute;
        margin: 190px auto 0 209px;
        display: none;
      }
      .hangmanRightLeg {
        position: absolute;
        margin: 190px auto 0 179px;
        display: none;
      }
      .hangmanScaffold {
        height: 304px;
        margin-left: 306px;
      }
      .scaffoldTop-and-Rope {
        margin-left: 194px;
        margin-bottom: 189px;
      }
      .hangmanBottom {
        display: block;
        margin: 0 auto;
      }
      .wordChallenge-wrapper {
        display: block;
        margin: 0 auto;
        text-align: center;
      }
      .wordChallenge {
        height: 100%;
        display: inline-block;
        margin: 0 auto;
      }
      .content-wrapper{
        width: 160px;
        top: 176px;
        left: 15px;
        position: absolute;
        font-family: 'Source Sans Pro', sans-serif;
        font-size: 14px;
        font-weight: 300;
        letter-spacing: 1px;
        line-height: 1.5em;
      }
      .content-hr {
        width: 3em;
        background-color: black;
        height: 1px;
        border: 0;
      }
      .letterBox-hr {
        width: 1em;
        background-color: black;
        height: 1px;
        border: 0;
      }
      .letterBox {
        width: 40px;
        height: 44px;
        border-color: #000000;
        border-bottom: 1px solid black;
        text-align: center;
        display: inline-block;
        margin: 0 auto;
        font-family: 'Source Sans Pro', sans-serif;
        font-size: 48px;
        font-weight: 700;
        color: #A83B70;
        line-height: 1.2em;
      }
      .clickLetter {
        font-family: 'Source Sans Pro', sans-serif;
        font-size: 16px;
        font-weight: 600;
        color: #A83B70;
        line-height: 1.2em;
      }
      .alphabet-wrapper {
        display: inline;
        margin: 10px auto 0 auto;
      }
      .alphabet {
        width: 25px;
        display: inline-block;
        text-align: center;
        margin: 0 auto;
        font-family: 'Source Sans Pro', sans-serif;
        font-size: 28px;
        font-weight: 300;
        color: #000000;
        line-height: 1.2em;
        cursor: pointer;
      }
      .wrongGuessesTitle {
        display: inline-block;
      }
      .wrongLetter, .guessCount {
        display: inline-block;
        font-weight: 700;
        font-size: 18px;
        color: #A83B70;
      }
      #gameWinner {
        margin-top: 30px;
        font-weight: 700;
        font-size: 16px;
        color: #A83B70;
      }
      #errorOverlay {
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.9);
        position: absolute;
        display: none;
      }
      .errorText {
        margin: 270px auto;
        text-align: center;
        font-family: 'Source Sans Pro', sans-serif;
        font-size: 72px;
        font-weight: 300;
        color: #000000;
      }
      .errorText a{
        text-decoration: none;
      }
    %script(src='js/hangman.js')
    :javascript
      // https://developer.mozilla.org/en/docs/Web/Events/DOMContentLoaded
      // https://developer.mozilla.org/en-US/docs/Web/API/EventTarget/addEventListener
      document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('newGame').addEventListener('click',initializeNewGame);
        var letters = document.getElementsByClassName('alphabet');
        Array.prototype.map.call(letters,function(x) {
          x.addEventListener('click', doGuess);
        });
        fetchWord();
      });
